html
body
  height: 100%
  margin: 0
  overflow: hidden

.dawn
  color: text
  counter-reset: dawn small
  font-family: Montserrat,Helvetica
  position: relative

  h1
    margin: 0 0 2em
    text-align: center

  &.nav > input:nth-child(n):checked ~ section
    top: 25%

    nav
      opacity: 1

  for i in 1..n
    > section article:nth-of-type({i})
      top: i * 70%

    > input:nth-child({i}):checked
      & ~ section nav .atomic
        li:nth-child(-n+{i - 1}):before
          content: 'âœ“'

        li:hover:before
          content: ''

        li:nth-child({i})
          color: highlight

      & ~ section
        top: 25% + i * -70

        > nav
          opacity: 0

        article:nth-of-type({i - 1}) label
          top: 90%

  &.hide > section
    left: -100%
    visibility: hidden

  &.show > section
    left: 10%
    visibility: visible

  .key
    background: text
    border-radius: 3px
    color: bg
    display: inline-block
    margin: 0 0.5em
    text-align: center
    width: 19px

  > section
    height: 100%
    left: 10%
    max-width: 800px
    position: fixed
    top: 25%
    transition: all .5s ease-out
    width: 80%

    nav
    article
      background: bg
      border-radius: 10px 50px 10px
      box-sizing: border-box
      min-height: height
      padding: 1em
      position: absolute
      transition: all .3s ease-out
      width: 100%

    article:before
      background-color: text
      border-radius: 50%
      color: bg
      content: counter(dawn)
      counter-increment: dawn
      font-size: 16px
      height: 19px
      left: 1em
      padding-top: 1px
      position: absolute
      text-align: center
      top: 1em
      width: 20px

    nav
      border-radius: 10px
      z-index: 3

      div
        bottom: 0
        left: 0
        margin: 1em
        position: absolute

      input
        border-radius: 10px
        border: none
        font-family: Montserrat,Helvetica
        height: 2em
        margin-left: 1em
        padding: 0 1em
        width: 200px

  article label
    height: 10%
    left: 0
    position: absolute
    top: 0
    width: 100%
    z-index: 2

  .atomic
    bottom: 0
    position: absolute
    right: 0

  > iframe
    left: 0
    position: absolute
