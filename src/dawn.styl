html
body
  height: 100%
  margin: 0
  overflow: hidden

.dawn
  position: relative
  counter-reset: dawn small
  font-family: Montserrat,Helvetica
  color: text
  text-align: center

  for i in 1..n
    > section article:nth-of-type({i})
      top: (i - 1) * 70%

    input[name=atomic]:nth-child({i}):checked
      & ~ nav .atomic
        li:nth-child(-n+{i - 1}):before
          content: 'âœ“'

        li:hover:before
          content: ''

        li:nth-child({i})
          color: highlight

      & ~ section
        top: 95% + i * -70

        article:nth-child({i - 1}) label
          top: 90%

  &.hide > section
    left: 200%
    visibility: hidden

  &.show > section
    left: 10%
    visibility: visible

  > section
    height: 100%
    left: 10%
    max-width: 700px
    position: fixed
    top: 25%
    transition: all .5s ease-out
    width: 80%

    article
      background: bg
      position: absolute
      border-radius: 10px 50px 10px
      height: height
      transition: all .3s ease-out
      width: 100%

      &:before
        background-color: text
        border-radius: 50%
        color: bg
        content: counter(dawn)
        counter-increment: dawn
        font-size: 16px
        height: 19px
        left: 10px
        padding-top: 1px
        position: absolute
        top: 10px
        width: 20px

  article label
    height: 10%
    left: 0
    position: absolute
    top: 0
    width: 100%
    z-index: 2

  > nav
    background: bg
    background-clip: padding-box
    border-right: 30px solid transparent
    height: 100%
    left: -145px
    position: fixed
    transition: all .3s ease-out
    width: 145px
    z-index: 1

    &:hover
      border-right: 1px solid transparent
      left: 0

    /* invert colors of the miniature panels */
    article
      background: text
      color: bg
      height: 80px
      border-radius: 2px 10px 2px
      margin: 0 auto
      position: relative
      font-size: 0.2em
      width: 80%

      label
        height: 100%

      &:hover
        background: inner

      &:before
        background: bg
        border-radius: 50%
        color: text
        content: counter(small)
        counter-increment: small
        left: 2px
        position: absolute
        top: 2px
        width: 7px

  .atomic
    bottom: 0
    position: absolute

  > iframe
    left: 0
    position: absolute
